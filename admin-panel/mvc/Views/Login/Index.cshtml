<div class="card col-lg-9">
    <div class="card-body">    
        <h1 class="card-title">Авторизация</h1>

        <form class="needs-validation" onsubmit="login_handler(event)" novalidate>
            <div class="mb-3">
                <label for="emailInput" class="form-label">Email</label>
                <input type="email" id="emailInput" class="form-control" required>
            </div>
            
            <div class="mb-3">
                <label for="passwordInput" class="form-label">Пароль</label>
                <input type="password" id="passwordInput" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-primary">Войти</button>
        </form>
    </div>
</div>